<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.ForgotPasswordActivity"
    android:background="#FAFAFA"
    >

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/back_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="10.89dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="36dp"/>


        </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/forget_password2"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:layout_marginLeft="88.71dp"
        android:layout_marginTop="34dp"
        android:textSize="16dp"
        />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="91dp"
        android:layout_height="92dp"
        android:layout_below="@+id/parent_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo1" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_forgot_password"
        android:lines="3"
        android:layout_below="@id/image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="#707070"
        android:textSize="16dp"
        android:gravity="center"
        android:padding="10dp"
        android:fontFamily="@font/roboto_regular"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/text"
        android:layout_marginRight="25dp"
        android:elevation="7dp"
        app:cardCornerRadius="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fontFamily="@font/roboto_light"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#707070" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttom"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/send_password"
        android:textColor="@color/white" />


</RelativeLayout>